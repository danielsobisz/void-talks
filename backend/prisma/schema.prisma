generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model confession {
  id        String   @id @default(cuid())
  content   String
  iv        String   @default("")
  authTag   String   @default("")
  createdAt DateTime @default(now())
  threads   thread[]
}

model thread {
  id           String     @id @default(cuid())
  confessionId String
  content      String
  createdAt    DateTime   @default(now())
  confession   confession @relation(fields: [confessionId], references: [id])
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  usernameNorm String   @unique
  passwordHash String
  recoveryHash String   @unique
}